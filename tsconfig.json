{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es6",
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noUnusedParameters": true,
      "outDir": "dist",
      "baseUrl": ".",
      "jsx": "react",
      "lib": [
          "es5",
          "es6",
          "dom"
      ],
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}